<header>
    <div class="container-header">
        <div><a href="/">BiciDatos</a></div>
        <nav>
            <div class="nav-links">
                <ul>
                    <li><a href="/mapa/">Mapa</a></li>
                    <li><a href="/bici-blog">Bici-blog</a></li>
                    <li><a href="/bici-teca">Bici-teca</a></li>
                </ul>
            </div>
            <div class="hamburger">&#9776;</div>
            <div class="hamburger-menu">
                <ul>
                    <li><a href="/map">Mapa</a></li>
                    <li><a href="/bici-blog">Bici-blog</a></li>
                    <li><a href="/bici-teca">Bici-teca</a></li>
                </ul>
            </div>
        </nav>
    </div>
</header>

<style>
    header {
        background-color: var(--primario);
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
        height: 4rem;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: fixed;
        z-index: 5;
        font-family: "Albert Sans", sans-serif;
    }
    .container-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: white;
        width: 90%;
        max-width: 1200px;
    }

    header div {
        font-size: 1.2rem;
    }

    header nav ul {
        display: flex;
        list-style: none;
    }

    header nav ul li {
        margin-left: 1rem;
    }

    a {
        text-decoration: none;
        color: white;
    }

    a:hover {
        text-decoration: underline;
    }

    .hamburger {
        display: none;
        flex-direction: column;
        justify-content: space-around;
        width: 2rem;
        height: 2rem;
        cursor: pointer;
    }

    .hamburger-menu {
        display: none;
        position: absolute;
        top: 3.2rem;
        left: 0;
        width: 100%;
        background-color: var(--primario);
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
    }

    .hamburger-menu ul {
        display: flex;
        flex-direction: column;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .hamburger-menu ul li {
        padding: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .show {
        display: block;
    }

    @media (max-width: 480px) {
        .nav-links {
            display: none;
        }

        .hamburger {
            display: block;
        }
        header {
            width: 100%;
        }
    }
</style>

<script>
    const hamburger = document.querySelector(".hamburger");
    const hamburgerMenu = document.querySelector(".hamburger-menu");

    hamburger.addEventListener("click", () => {
        hamburgerMenu.classList.toggle("show");
    });
</script>
