export const frontmatter = {
    title: "Incidente de vulneración ciclista en Bolivia 2010-2021",
    author: "Abigail Roque Miranda , Nicaela Leon",
    date: "2021-10-01",
    tags: ["Bicicleta", "Vulneración ciclista", "Bolivia"],
